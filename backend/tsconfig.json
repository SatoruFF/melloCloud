{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false, // ?
    "moduleResolution": "Node16",
    // "bun-types" is the important part
    "types": [
      //"bun-types"
    ],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist", "bun.lockb", "bunfig.toml"]
}
