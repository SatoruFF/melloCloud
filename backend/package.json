    "@prisma/client": "^6.11.1",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.3",
    "bun-types": "^1.2.2",
    "cloudinary": "^1.37.0",
    "concurrently": "^8.2.0",
    "config": "^3.3.9",
    "dotenv": "^16.1.4",
    "ejs": "^3.1.9",
    "express-formidable": "^1.2.0",
    "hono": "^4.11.7",
    "http-errors": "^2.0.0",
    "imagekit": "^6.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mime-types": "^2.1.35",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.9",
    "nodemon": "^3.1.9",
    "passport": "^0.7.0",
