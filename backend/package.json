{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.node.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc --noEmitOnError false",
    "dev": "bun run --hot src/server.bun.ts",
    "start": "node dist/server.node.js",
    "start:bun": "bun run src/server.bun.ts",
    "build:bun": "bun build",
    "postinstall-dev": "npx prisma generate && npx prisma migrate dev",
    "postinstall": "npx prisma generate && npx prisma migrate deploy",
    "start:prisma": "concurrently \"npx tsc --watch\" \"nodemon dist/server.node.js\" \"prisma studio\"",
    "dev:node": "concurrently \"npx tsc --watch\" \"wait-on dist/server.node.js && nodemon dist/server.node.js\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm biome check src",
    "lint:fix": "pnpm biome check --write src",
    "test": "jest",
    "prepare": "husky"
  },
  "author": "SatoruF",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.685.0",
    "@hono/node-server": "^1.19.9",
