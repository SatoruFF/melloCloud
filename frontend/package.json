    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.0.9"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  },
  "build": {
    "appId": "cloud.mello.app",
    "productName": "Mello",
    "directories": { "output": "release" },
    "files": ["dist/**", "electron/**"],
    "extraMetadata": { "main": "electron/main.cjs" }
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.scss": "stylelint --fix"
  }
