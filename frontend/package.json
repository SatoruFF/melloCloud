{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "cross-env MODE=development vite",
    "dev:all": "concurrently \"cross-env MODE=development vite\" \"cd ../backend && npm run start:node\"",
    "build": "vite build",
    "preview": "vite preview",
    "build:dev": "cross-env MODE=development vite build",
    "build:prod": "cross-env MODE=production vite build",
    "dev:desktop": "pnpm exec tauri dev",
    "build:desktop": "pnpm exec tauri build",
    "pack:desktop": "pnpm exec tauri build",
    "dev:desktop:electron": "concurrently \"cross-env MODE=development vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:desktop:electron": "cross-env BUILD_ELECTRON=1 vite build && electron .",
    "pack:desktop:electron": "cross-env BUILD_ELECTRON=1 vite build && electron-builder",
    "build:tauri": "cross-env BUILD_TAURI=1 vite build",
    "test": "jest test.js --roots src",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm biome check src",
    "lint:fix": "pnpm biome check --write src",
    "lint:scss": "npx stylelint \"**/*.scss\"",
    "lint:scss:fix": "npx stylelint \"**/*.scss\" --fix",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui --reporter=html",
    "test:unit:react": "jest test.ts --roots src",
    "test:integration": "jest test.ts --roots tests/integration",
    "test:e2e": "cypress open",
    "test:ui": "npx loki test",
    "test:ui:ok": "npx loki approve",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "visual:report": "npm-run-all --serial visual:report:*",
    "visual:report:json": "node scripts/generate-visual-json-report.ts",
    "visual:report:html": "reg-cli --from .loki/report.json --report .loki/report.html",
    "prepare": "husky",
    "tauri": "tauri"
  },
